<div class="row text-center">
  <% posts.each do |post| %>
    <div class="col-lg-3 col-md-4 col-xs-12">
      <div class="cards">
        <% if post.teamname == yield(:title) %>
          <%= link_to post do %>
            <% if post.image? %>
              <%= image_tag post.image.url, class: "teamImg" %>
            <% else %>
              <%= image_tag 'frontale.jpg', class: "teamImg" %>
            <% end %>
            <p class="content"><%= post.content %></p>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>