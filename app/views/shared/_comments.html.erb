<% comments.each_with_index do |comment, i| %>
  <% unless comment.user.blank? %>
    <div>
      <% unless comment.user.image.blank? %>
        <%= image_tag comment.user.image.url, class: "icon_image" %>
      <% else %>
        <%= image_tag ("noimage.png"), class: "icon_image" %>
      <% end %>
      <%= ONE + i %>.<%= comment.user.username %>:<span class="time"><%= comment[:created_at].to_s(:datetime_jp) %></span>
      <p class="comment_content"><%= comment.content %></p><hr>
    </div>
  <% end %>
<% end %>
