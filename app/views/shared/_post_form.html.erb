<% if user_signed_in? %>
  <%= form_for(@post) do |f| %>
    <span class="picture">
      <%= f.file_field :image %>
    </span>
    <div class="field">
      <%= f.text_area :content, class: "text_area", placeholder: "Compose new micropost..." %>
    </div>
    <%= f.hidden_field :teamname, value: yield(:title) %>
    <%= f.submit "投稿する", class: "btn btn-primary" %>
  <% end %>
<% end %>
