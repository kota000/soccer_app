<footer class="bg-dark py-1">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <p class="footer_title">&copy;<%= Time.current.year %> Soccer Fun .</p>
      </div>
      <div class="col-md-4 align-self-center">
        <ul class="list-inline text-center text-md-right mb-0">
          <li class="list-inline-item mx-2" data-toggle="tooltip" data-placement="top" title="Facebook">
            <a class="text-white" target="_blank" href="https://www.facebook.com/htmlstream">
              <i class="fab fa-facebook"></i>
            </a>
          </li>
          <li class="list-inline-item mx-2" data-toggle="tooltip" data-placement="top" title="Instagram">
            <a class="text-white" target="_blank" href="https://www.instagram.com/htmlstream">
              <i class="fab fa-instagram"></i>
            </a>
          </li>
          <li class="list-inline-item mx-2" data-toggle="tooltip" data-placement="top" title="Twitter">
            <div class="twitter">
              <%= link_to "https://twitter.com/share?url=#{request.url}サッカー専用掲示板！", title: 'Twitter', target: '_blank' do %>
              <i class="fab fa-twitter icon"></i>
              <% end %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>